<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.landleaf.homeauto.center.device.model.mapper.DeviceRepairGuideMapper">

    <select id="page" resultType="com.landleaf.homeauto.center.device.model.vo.device.error.DeviceGuideVO">
        SELECT
            d.ID,
            d.reason,
            d.solution,
            d.type
        FROM
            device_repair_guide d
        <where>
            <if test="type != null and type != ''">
                and d.TYPE = #{type}
            </if>
            <if test="reason != null and reason != ''">
                AND d.reason  like '%${reason}%'
            </if>
        </where>
        order by d.create_time desc
    </select>
</mapper>
