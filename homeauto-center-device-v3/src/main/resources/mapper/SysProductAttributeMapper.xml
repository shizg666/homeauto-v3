<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.landleaf.homeauto.center.device.model.mapper.SysProductAttributeMapper">

    <!--系统产品 属性-属性值 map -->
    <resultMap id="attributemap" type="com.landleaf.homeauto.center.device.model.vo.sys_product.SysProductAttributeDTO">
        <result column="name" property="name"/>
        <result column="code" property="code"/>
        <result column="type" property="type"/>
        <result column="category_list" property="categoryList"/>
        <result column="function_type" property="functionType"/>
        <result column="nature" property="nature"/>
        <association property="scope" javaType="com.landleaf.homeauto.center.device.model.vo.sys_product.SysProductAttributeScopeDTO">
            <result column="max" property="max"/>
            <result column="min" property="min"/>
            <result column="step" property="step"/>
            <result column="precision" property="precision"/>
        </association>
        <collection property="infos" ofType="com.landleaf.homeauto.center.device.model.vo.sys_product.SysProductAttributeInfoDTO">
            <result column="infoName" property="name"/>
            <result column="infoCode" property="code"/>
        </collection>
    </resultMap>

    <select id="getListAttrDTOBySysProductId"
            resultMap="attributemap">
            SELECT
                pa.NAME,
                pa.nature,
                pa.code,
                pa.category_list,
                PA.TYPE,
                PA.function_type,
                pai.name AS infoName,
                pai.code AS infoCode,
                pais.MAX,
                pais.MIN,
                pais.step,
                pais.PRECISION
            FROM
                sys_product_attribute pa
                LEFT JOIN sys_product_attribute_info pai ON pa.ID = pai.sys_attr_id
                LEFT JOIN sys_product_attribute_info_scope pais ON pa.ID = pais.parent_id
            WHERE
                pa.sys_product_id = #{sysProductId}
    </select>
</mapper>
