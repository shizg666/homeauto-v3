    <select id="page" resultType="com.landleaf.homeauto.common.domain.vo.realestate.RealestateVO">
        SELECT
        re.ID,
        re.NAME,
        re.code,
        re.developer_code,
        re.address,
        re.PATH,
        re.status,
        re.path_name,
        re.address_complete
        FROM
        home_auto_realestate re
        <where>
            <if test="name!=null and name!=''">
                AND re.NAME like '%${name}%'
            </if>
        </where>
        ORDER BY re.create_time desc
        <!--<if test="paths!=null and paths.size > 0">-->
            <!--AND-->
            <!--<foreach item="path" collection="paths" open="(" separator="or" close=")">-->
                <!--re.path_oauth like '${path}%'-->
            <!--</foreach>-->
        <!--</if>-->
    </select>
    <select id="getListSeclects" resultType="com.landleaf.homeauto.common.domain.vo.SelectedLongVO">
        SELECT
        re.id as value,
        re.NAME as label
        from
        home_auto_realestate re
        <if test="paths!=null and paths.size > 0">
            where
            <foreach item="path" collection="paths" open="(" separator="or" close=")">
                re.path_oauth like '${path}%'
            </foreach>
        </if>
    </select>
    <select id="getListCascadeSeclects" resultType="com.landleaf.homeauto.common.domain.vo.CascadeLongVo">
        SELECT
        re.id as value,
        re.NAME as label
        from
        home_auto_realestate re
        <if test="ids!=null and ids.size > 0">
            where re.id in
            <foreach item="id" collection="ids" open="(" separator="," close=")">
                #{id}
            </foreach>
        </if>
    </select>

    <select id="getListSeclectsByProject"
            resultType="com.landleaf.homeauto.center.device.model.vo.realestate.RealestateModeStatusVO">
        SELECT r.id,r.name,r.mode_status from home_auto_realestate r

        where r.id in
        <foreach item="id" collection="ids" open="(" separator="," close=")">
            #{id}
        </foreach>

        <if test="name!=null and name !='' ">
            and r.name like '%${name}%'
        </if>


        ORDER BY r.create_time desc
    </select>

    <select id="cascadeRealestateProject"
            resultMap="realestateProject">
     SELECT
        r.ID AS rid,
        r.NAME AS rname,
        P.ID AS pid,
        P.NAME AS pname
    FROM
        home_auto_realestate r,
        home_auto_project P
    WHERE
        r.ID = P.realestate_id
        <if test="name != null and name != ''">
            and r.name like '%${name}%'
        </if>

    </select>

    <select id="cascadeRealestateProjectFamily"
            resultMap="buildingFamily">
    SELECT
        f.ID AS familyId,
        f.NAME AS familyName,
        f.building_code,
        f.building_name,
        f.unit_code,
        f.unit_name
    FROM
        home_auto_family f
    WHERE
        <if test="projectId !=null or project != ''">
            f.project_id = #{projectId}
        </if>
        and f.realestate_id = #{realestateId}
    ORDER BY
        f.ID ASC
    </select>

    <select id="cascadeRealestateFamilyRoom"
            resultType="com.landleaf.homeauto.center.device.model.vo.family.FamilyCascadeBO">
        SELECT
        f.ID AS familyId,
        f.doorplate,
        f.building_code,
        f.building_name,
        f.unit_code,
        f.unit_name
        FROM
        home_auto_family f
        WHERE
        f.realestate_id = #{realestateId}
        <if test="projectId !=null">
            and f.project_id = #{projectId}
        </if>
        ORDER BY
        f.ID ASC
    </select>

    <select id="getRealestateIdByCode" resultType="java.lang.Long">
        select r.id from home_auto_realestate r where r.code = #{code}
    </select>


</mapper>
