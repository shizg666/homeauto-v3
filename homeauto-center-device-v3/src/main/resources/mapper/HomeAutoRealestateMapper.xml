<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.landleaf.homeauto.center.device.model.mapper.HomeAutoRealestateMapper">


    <!--楼盘项目级联数据-->
    <resultMap id="realestateProject" type="com.landleaf.homeauto.common.domain.vo.CascadeLongVo">
        <result column="rid" property="value"/>
        <result column="rname" property="label"/>
        <collection property="children" ofType="com.landleaf.homeauto.common.domain.vo.CascadeLongVo">
            <result column="pid" property="value"/>
            <result column="pname" property="label"/>
        </collection>
    </resultMap>
    <!--楼盘项目级联数据-->
    <resultMap id="buildingFamily" type="com.landleaf.homeauto.common.domain.vo.realestate.CascadeStringVo">
        <result column="building_code" property="value"/>
        <result column="building_name" property="label"/>
        <collection property="children" ofType="com.landleaf.homeauto.common.domain.vo.realestate.CascadeStringVo">
            <result column="unit_code" property="value"/>
            <result column="unit_name" property="label"/>
            <collection property="children" ofType="com.landleaf.homeauto.common.domain.vo.CascadeLongVo">
                <result column="familyId" property="value"/>
                <result column="familyName" property="label"/>
            </collection>
        </collection>
    </resultMap>

    <!--&lt;!&ndash;楼栋 单元 房号 级联数据&ndash;&gt;-->
