<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.landleaf.homeauto.center.device.model.mapper.FamilySceneHvacConfigActionPanelMapper">

    <select id="getListSyncPanelAction"
            resultType="com.landleaf.homeauto.center.device.model.domain.FamilySceneHvacConfigActionPanel">
          SELECT
                pa.hvac_action_id,
                pa.temperature_code,
                pa.temperature_val,
                pa.switch_code,
                pa.switch_val
            FROM
                family_scene_hvac_panel_action pa
            WHERE
                pa.family_id = #{familyId}
    </select>
</mapper>
